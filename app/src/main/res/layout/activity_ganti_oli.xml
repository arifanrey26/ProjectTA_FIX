<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GantiOliActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tanyaoli1"
        android:text="Kilometer berapakah anda biasa mengganti oli? (direkomendasikan pada KM 2000)"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="65dp"
        android:justificationMode="inter_word"/>

    <EditText
        android:id="@+id/et_Number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tanyaoli2"
        android:text="Hidupkan sepeda motor anda terlebih dulu dan lihat pada bagian spedometer, kilometer berapakah sepeda motor anda saat ini?"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp"
        android:justificationMode="inter_word"/>

    <EditText
        android:id="@+id/et_Number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_hitunggantioli"
        android:text="hitung"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        android:backgroundTint="#03A9F4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_jawabanhitung"
        android:text="Penggantian oli sepeda motor anda wajib dilakukan jika sudah menunjukkan kilometer :"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp"
        android:justificationMode="inter_word"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hasilhitung"
        android:layout_marginTop="30dp"
        android:textSize="41sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"/>

</LinearLayout>