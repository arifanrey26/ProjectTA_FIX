<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PasalpasalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvpasalpasal1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="368dp"
        android:text="UU Lalu Lintas dan Angkutan Jalan"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvpasalpasal2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="340dp"
        android:text="nomor 22 Tahun 2009"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_pasal_pasal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvpasalpasal2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="-270dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="175dp"
        android:gravity="center_horizontal"
        android:text="Buka"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>