<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NomorDaruratActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/JudulNomdar"
        android:text="DAFTAR NOMOR DARURAT REPUBLIK INDONESIA"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="60dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jdlLayananDarurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JudulNomdar"
        android:layout_marginTop="45dp"
        android:text="  Layanan Darurat"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nmrLayananDarurat"
        android:layout_below="@+id/jdlLayananDarurat"
        android:layout_marginTop="8dp"
        android:text="   112"
        android:textSize="19sp"/>
    <Button
        android:id="@+id/btn_nmrLayananDarurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlLayananDarurat"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        android:text="HUBUNGI"
        android:backgroundTint="#03A9F4"/>

    <TextView
        android:id="@+id/jdlPolisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nmrLayananDarurat"
        android:layout_marginTop="35dp"
        android:text="  Polisi"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/nmrPolisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlPolisi"
        android:layout_marginTop="8dp"
        android:text="   110"
        android:textSize="19sp"/>
    <Button
        android:id="@+id/btn_nmrPolisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlPolisi"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        android:text="HUBUNGI"
        android:backgroundTint="#03A9F4"/>

    <TextView
        android:id="@+id/jdlAmbulans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nmrPolisi"
        android:layout_marginTop="35dp"
        android:text="  Ambulans"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/nmrAmbulans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlAmbulans"
        android:layout_marginTop="8dp"
        android:text="   118"
        android:textSize="19sp"/>
    <Button
        android:id="@+id/btn_nmrAmbulans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlAmbulans"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        android:text="HUBUNGI"
        android:backgroundTint="#03A9F4"/>

    <TextView
        android:id="@+id/jdlPemadamKebakaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nmrAmbulans"
        android:layout_marginTop="35dp"
        android:text="  Pemadam Kebakaran"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/nmrPemadamKebakaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlPemadamKebakaran"
        android:layout_marginTop="8dp"
        android:text="   113"
        android:textSize="19sp"/>
    <Button
        android:id="@+id/btn_nmrPemadamKebakaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlPemadamKebakaran"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        android:text="HUBUNGI"
        android:backgroundTint="#03A9F4"/>

    <TextView
        android:id="@+id/jdlSAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nmrPemadamKebakaran"
        android:layout_marginTop="35dp"
        android:text="  SAR"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/nmrSAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlSAR"
        android:layout_marginTop="8dp"
        android:text="   115"
        android:textSize="19sp"/>
    <Button
        android:id="@+id/btn_nmrSAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdlSAR"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"

        android:text="HUBUNGI"
        android:backgroundTint="#03A9F4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_catatan"
        android:text="Catatan :\nHarap menelpon jika benar-benar dalam kondisi darurat"
        android:textSize="18sp"
        android:layout_marginHorizontal="13dp"
        android:layout_below="@id/btn_nmrSAR"
        android:layout_marginTop="30dp"/>

    </LinearLayout>
</ScrollView>